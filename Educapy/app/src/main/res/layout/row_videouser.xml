<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorblack"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoviewScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-condensed"
        android:shadowColor="@color/colorblack"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_above="@id/timetv"
        android:text="El titulo del video"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:shadowRadius="2"
        android:shadowDy="1"
        android:shadowDx="1"
        android:textColor="@color/colorWhite"
        android:text="dd/MM/yyyy hh:mm"
        android:shadowColor="@color/colorblack"></TextView>

    <ProgressBar
        android:id="@+id/progressBarRT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"></ProgressBar>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/downloadFabRT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="610dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="81dp"
        android:src="@drawable/ic_download"
        app:fabSize="mini" />


</RelativeLayout>